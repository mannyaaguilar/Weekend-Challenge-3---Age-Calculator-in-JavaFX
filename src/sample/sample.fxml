<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <VBox GridPane.columnIndex="0" spacing="10">

        <Text text="   Hello, welcome to the JavaFX Age Calculator"
        GridPane.rowIndex="0"
        GridPane.columnIndex="0"></Text>

        <Text text= " Please enter your name:"
              fx:id="questionText"
              GridPane.rowIndex="1"
              GridPane.columnIndex="0"></Text>

        <TextField fx:id="entryField"
        GridPane.rowIndex="2"
        GridPane.columnIndex="1"></TextField>

        <Text text= ""
              fx:id="responseText"
              GridPane.rowIndex="3"
        GridPane.columnIndex="0"></Text>

        <Text text= ""
              fx:id="responseText2"
              GridPane.rowIndex="4"
              GridPane.columnIndex="0"></Text>

        <Text text= ""
              fx:id="responseText3"
              GridPane.rowIndex="5"
              GridPane.columnIndex="0"></Text>

        <Button text="Submit"
                fx:id="btnSubmit"
                GridPane.columnIndex="1"
                onAction="#onSubmitClick"/>



    </VBox>







</GridPane>