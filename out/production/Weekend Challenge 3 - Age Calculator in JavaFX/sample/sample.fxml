<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <VBox GridPane.columnIndex="0" spacing="10">

        <Text text="Hello, Welcome to JavaFX Age Calculator!"
              fx:id="greetingText"
              GridPane.rowIndex="0"
              GridPane.columnIndex="0"></Text>

        <Text text="What is your name:"
              fx:id="questionText"
              ></Text>


        <TextField fx:id="userInput"></TextField>


        <Button text="Submit"
                onAction="#clickyButton"
                fx:id="clickyButton"
                ></Button>

        <Text text=""
              fx:id="responseText"
              GridPane.rowIndex="2"
              GridPane.columnIndex="0"></Text>

        <Text text=""
              fx:id="responseText2"
              GridPane.rowIndex="3"
              GridPane.columnIndex="0"></Text>

        <Text text=""
              fx:id="responseText3"
              GridPane.rowIndex="4"
              GridPane.columnIndex="0"></Text>

        <Text text=""
              fx:id="responseText4"
              GridPane.rowIndex="5"
              GridPane.columnIndex="0"></Text>


    </VBox>







</GridPane>